@page
@model MyApp.Namespace.ListModel
@{
    ViewData["Title"] = "Admin";
}

<h2>All Events</h2>

<div>
    <a class="btn btn-primary btn-sm mb-2" asp-page="../Events/Create">Create Events</a>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Closed Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Polls)
                {
                    var pollGuid = item.PollGuid.ToString("N");
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.CloseDate)</td>
                        <td>
                            <a class="btn btn-secondary btn-sm ms-1 mb-1" asp-page="/Events/Index" asp-route-id="@item.Id">View</a>
                            <a class="btn btn-secondary btn-sm ms-1 mb-1" asp-page="/Events/Join" asp-route-guid="@pollGuid">Join</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>