@page
@model LoginModel
@{
    ViewData["Title"] = "Admin Login Page";
}
<h1>@ViewData["Title"]</h1>

<div class="form-group">
    <h4 class="text-danger">@Model.Message</h4>
    <form method="POST" class="col-md-offset-2 col-md-10">
        <div class="form-group">
            <label for="name">Username</label>
            <input type="text" name="username" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password-form"/>
            <button class="btn-sm btn-secondary d-inline" id="togglePassword">show/hide</button>
        </div>

        <button type="submit" class="btn btn-primary btn-sm mt-2 mb-2">Log In</button>
    </form>
</div>

<script>
    const togglePassword = document
        .querySelector('#togglePassword');
    const password = document.querySelector('#password-form');
    togglePassword.addEventListener('click', function(event) {
        event.preventDefault();
        const type = password
            .getAttribute('type') === 'password' ?
            'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('bi-eye');
    });
</script>